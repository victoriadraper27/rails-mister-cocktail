<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %></li>
  <li class="list-inline-item"><%= dose.description %></li>
  <%= link_to 'Remove', dose_path(dose), method: :delete, data: {confirm: 'Are you sure?'},  class: "text-danger" %>
  <% end %>
</ul>
<%= link_to "Back to List", cocktails_path, class: "btn btn-info" %>
<%= link_to "Add New", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
