<div class="container mt-5 pt-5 vh-100 cards-page">
  <div class="cards-container">
    <h1>Cocktails</h1>
    <div class="row">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
      <div class="card-holder">
          <div class="card" style="background-image: url('<%= cl_image_path cocktail.photo.key  %>');">
            <div class="card-body">
              <h5 class="card-title"><%= cocktail.name %></h5>
            </div>
            <div class="card-footer-white text-muted">
              <%= link_to 'more info', cocktail, class: "text-primary more-info"  %>
            </div>
          </div>
      </div>
      <% end %>
    <% end %>
    </div>
    <div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    âœš New Cocktail
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
  <form class="px-4 py-3">
    <h1>Create a New Cocktail</h1>
    <%= simple_form_for(@cocktail) do |f| %>
    <div class="form-group">
      <%= f.input :name %>
    </div>
    <div class="form-group">
     <%= f.input :photo, as: :file %>
    </div>
    <div class="dropdown-divider"></div>
      <%= f.submit "Create Cocktail", class: "btn btn-info" %> |
      <button type="cancel" class="btn btn-primary">Cancel</button>
    <% end %>
  </form>
</div>
</div>
  </div>
</div>


